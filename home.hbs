{{!< default}}
<header class='home-template__hero'>
    {{#get 'pages' filter="title:'Home::Hero - Body'" limit='1'}}
        {{#foreach pages}}
            {{content}}
        {{/foreach}}
    {{/get}}
    <section class='kg-button-card__group'>
        {{#get 'pages' filter='tag:hash-home-hero-cta' limit='2'}}
            {{#foreach pages}}
                {{content}}
            {{/foreach}}
        {{/get}}
    </section>
</header>
<section class='home-template__pillars'>
    <section class='home-template__pillars__inner'>
        <h2>Pillars of Ruby Central</h2>
        <hr />
        <section class='home-template__pillars__details'>
            <section class='home-template__pillars__details--content'>
                {{#get 'pages' filter="title:'Home::Pillars - Conferences'" limit='1'}}
                    {{#foreach pages}}
                        {{content}}
                    {{/foreach}}
                {{/get}}
                {{#get 'pages' filter="title:'Home::Pillars - Button'" limit='1'}}
                    {{#foreach pages}}
                        {{content}}
                    {{/foreach}}
                {{/get}}
            </section>
            <section class='home-template__pillars__details--image-grid'>
                <img
                    class='home-template__pillars__details--image-grid_item--one'
                    src={{asset 'images/home__pillars-image-grid-01.jpg'}}
                    alt='Conference room with numerous attendees and a main stage'
                />
                <img
                    class='home-template__pillars__details--image-grid_item--two'
                    src={{asset 'images/home__pillars-image-grid-02.jpg'}}
                    alt='RailsConf 2025 flyer with event dates and times'
                />
                <img
                    class='home-template__pillars__details--image-grid_item--three'
                    src={{asset 'images/home__pillars-image-grid-03.jpg'}}
                    alt='Young man in plaid shirt giving a hug to a person with a backpack'
                />
            </section>
            <aside class='home-template__pillars__details--stats'>
                <section>
                    <h3>42</h3>
                    <p>conferences hosted since 2001</p>
                </section>
                <section>
                    <h3>18,000+</h3>
                    <p>attendees</p>
                </section>
                <section>
                    <h3>2,000+</h3>
                    <p>speakers who have graced our stages</p>
                </section>
            </aside>
        </section>
    </section>
</section>
<section class='home-template__open-source'>
    <section class='home-template__open-source__content'>
        {{#get 'pages' filter="title:'Home::OpenSource'" limit='1'}}
            {{#foreach pages}}
                {{content}}
            {{/foreach}}
        {{/get}}
        {{#get 'pages' filter="title:'Home::OpenSource - Button'" limit='1'}}
            {{#foreach pages}}
                {{content}}
            {{/foreach}}
        {{/get}}
    </section>
    <aside class='home-template__open-source__stats'>
        <section>
            <h3>Over 210 Billion</h3>
            <p>gem downloads served</p>
        </section>
        <section>
            <h3>Over 230K</h3>
            <p>users and 185K gems</p>
        </section>
        <section>
            <h3>100% Uptime</h3>
            <p>since 2013 with 24/7 on call</p>
        </section>
    </aside>
</section>
<section class='home-template__community'>
    <section class='home-template__community__inner'>
        <section class='home-template__community__details'>
            <section class='home-template__community__details--content'>
                {{#get 'pages' filter="title:'Home::Community'" limit='1'}}
                    {{#foreach pages}}
                        {{content}}
                    {{/foreach}}
                {{/get}}
                {{#get 'pages' filter="title:'Home::Community - Button'" limit='1'}}
                    {{#foreach pages}}
                        {{content}}
                    {{/foreach}}
                {{/get}}
            </section>
            <img
                class='home-template__community__details--image'
                src={{asset 'images/home__community__details--image.jpg'}}
                alt='Group of developers hugging and smiling together'
            />
            <aside class='home-template__community__details--stats'>
                <section>
                    <h3>26</h3>
                    <p>local meetup grants spanning 5 continents</p>
                </section>
                <section>
                    <h3>330+</h3>
                    <p>scholars</p>
                </section>
                <section>
                    <h3>1,575</h3>
                    <p>members</p>
                </section>
            </aside>
        </section>
    </section>
</section>
<section class='home-template__support'>
    {{#get 'pages' filter="title:'Home::Support'" limit='1'}}
        {{#foreach pages}}
            {{content}}
        {{/foreach}}
    {{/get}}
    <section class='sponsors'>
        <p class='sponsors__title'>A special thanks to our supporters, you make this possible!</p>
        <div class='sponsors__inner'>
            {{#get "pages" filter="tag:hash-corporate-sponsor-ruby" include="feature_image"}}
                {{#foreach pages}}
                  {{#if feature_image}}
                    <img src="{{feature_image}}" alt="{{title}}" />
                  {{/if}}
                {{/foreach}}
              {{/get}}
        </div>
    </section>
</section>
{{> 'get-involved' }}
